var grid2_2 = {
    grid_id: "#jqxGrid2_2"
   , grid_init: function (dataAdapter) {
       $(grid2_2.grid_id).jqxGrid({
           width: tab_2.grid_width,
           height: tab_2.grid_height,
           source: dataAdapter,
